#!/usr/bin/env perl

use strict;
use warnings;
use 5.010;

use Games::Dice::Bag 'roll';

my $die_spec = shift @ARGV // 'd6';
my $rolls = shift @ARGV // 1;

my %results;
$results{roll($die_spec)}++ for 1 .. $rolls;

if ($rolls == 1) {
  say keys %results;
} else {
  say "$_\t$results{$_}" for sort { $a <=> $b } keys %results;
}
